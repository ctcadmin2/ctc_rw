{
  "private": true,
  "workspaces": {
    "packages": [
      "api",
      "web",
      "packages/*"
    ]
  },
  "devDependencies": {
    "@redwoodjs/core": "^1.4.0"
  },
  "eslintConfig": {
    "extends": "@redwoodjs/eslint-config",
    "rules": {
      "no-unused-vars": [
        "error",
        {
          "ignoreRestSiblings": true
        },
        {
          "argsIgnorePattern": "^_"
        }
      ]
    },
    "root": true
  },
  "engines": {
    "node": ">=14.17 <=16.x",
    "yarn": ">=1.15 <2"
  },
  "prisma": {
    "seed": "yarn rw exec seed"
  }
}